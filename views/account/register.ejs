<title> <% title %> </title>
<h1> <% title %> </h1>
<form action="/account/register" method="post" class="form-container">
    <div class="input">
        <label>First Name</label>
        <input type="text" name="account_firstname" required>
    </div>
    <div class="input">
        <label>Last Name</label>
        <input type="text" name="account_lastname" required>
    </div>
    <div class="input">
        <label>Email</label>
        <input type="email" name="account_email" required>
    </div>
    <div class="input">
        <label>Password</label>
        <input type="password" name="account_password" pattern="(?=.*\d)(?=.*[A-Z])(?=.*[!@#$%^&*])(?=.*[a-zA-Z]).{12,}" title="Password must be 12 characters or longer, contain at least 1 capital letter, 1 number, and 1 special character." required>
    </div>
    <button class='submit-button' type="submit">Register</button>
</form>