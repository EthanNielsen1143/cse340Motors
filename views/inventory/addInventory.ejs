<title> <% title %> </title>
<h1> <% title %> </h1>

<% if (errors) { %>
<ul class="message warning">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<body>
    <%- messages() %>
    <form action='/inv/add-inventory' method="post"> 
        <div class="form-container">
            <%- classificationList %>
            <input type="text" class="input" id="invmake" name="inv_make" placeholder="Make" required>
            <input type="text" class="input" id="invmodel" name="inv_model" placeholder="Model" required>
            <input type="number" class="input" id="invyear" name="inv_year" placeholder="Year (XXXX)" required>
            <textarea class="input" id="invdescription" name="inv_description" placeholder="Description" rows="4" cols="45" required></textarea>
            <input type="text" class="input" id="invimage" name="inv_image" value="/images/vehicles/no-image.png" size="35" required>
            <input type="text" class="input" id="invthumbnail" name="inv_thumbnail" value="/images/vehicles/no-image-tn.png" size="35" required>
            <input type="number" class="input" id="invprice" name="inv_price" placeholder="Price" required>
            <input type="number" class="input" id="invmiles" name="inv_miles" placeholder="Miles" required>
            <input type="text" class="input" id="invcolor" name="inv_color" placeholder="Color" required>
        </div>
        <button class="submit-button" type="submit">Add Inventory</button>
    </form>
</body>